<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/role_selection_title"
            android:textAppearance="@style/Text.Title"
            android:layout_marginBottom="32dp"/>

        <!-- Role Selection Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioGroup
                android:id="@+id/radioGroupRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioWorker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/role_worker"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/radioSiren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/role_siren"
                    android:textSize="18sp"
                    android:padding="12dp"/>

                <RadioButton
                    android:id="@+id/radioDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/role_dashboard"
                    android:textSize="18sp"
                    android:padding="12dp"/>
            </RadioGroup>
        </com.google.android.material.card.MaterialCardView>

        <!-- Server Configuration Card -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Server IP Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/server_ip_label"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="outline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etServerIp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/server_ip_hint"
                        android:inputType="text"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Zones Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/zones_label"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="outline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etZones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/zones_hint"
                        android:inputType="text"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Worker ID Input (conditional) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutWorkerId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/worker_id_label"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="outline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etWorkerId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/worker_id_hint"
                        android:inputType="text"
                        android:textSize="16sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Enable Audio Switch (conditional) -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchEnableAudio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_audio_label"
                    android:textSize="16sp"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Help Button -->
        <Button
            android:id="@+id/btnHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_find_ip"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Material3.Button.TextButton"/>

        <!-- Connect Button -->
        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/connect_button"
            style="@style/Button.Primary"/>

    </LinearLayout>
</ScrollView>
