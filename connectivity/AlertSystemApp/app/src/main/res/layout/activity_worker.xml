<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Header Card -->
    <com.google.android.material.card.MaterialCardView
        style="@style/Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvWorkerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/worker_title"
                android:textAppearance="@style/Text.Title"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvServer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Server: ---"
                    android:textAppearance="@style/Text.Caption"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_disconnected"
                    android:textAppearance="@style/Text.Caption"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvZones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zones: ---"
                android:textAppearance="@style/Text.Caption"/>

            <TextView
                android:id="@+id/tvTransmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transmission_meta"
                android:textAppearance="@style/Text.Caption"
                android:textStyle="italic"
                android:textColor="@color/primary"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvVibratorWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_vibrator_warning"
                android:textAppearance="@style/Text.Caption"
                android:textColor="@color/status_disconnected"
                android:visibility="gone"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Alert Card (shown when alert received) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/alertCard"
        style="@style/Card.Alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvAlertTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️ ALERT: Unit-3"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/severity_3"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvAlertSeverity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Severity 3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvAlertId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alert ID: S123456"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACK in 15s"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/severity_3"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnAck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ack_button"
                style="@style/Button.ACK"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Alert Log -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alert_log_title"
        android:textAppearance="@style/Text.Header"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAlertLog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
